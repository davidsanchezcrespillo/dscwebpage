{% extends "base.j2" %}
{% from "macros.j2" import render_excerpt with context  %}
{% from "macros.j2" import render_tags with context  %}
{% block content %}
{% block page_title %}<h1 class="title">{{ resource.meta.title }}</h1>{% endblock %}


<p>
{{ resource.meta.description }} <a href="{{ content_url( resource.meta.rss ) }}"><img src="{{ media_url('img/feed.png')}}" alt="RSS" height="16" width="16"/></a>
</p>

{{ render_tags(resource) }}

<ul class="listing clear">
{% for res in resource.node.walk_resources_sorted_by_time() %}
<li>
    {{ render_excerpt(res) }}
</li>
{% endfor %}
</ul>
{% endblock %}
